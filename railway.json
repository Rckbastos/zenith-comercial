{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm install",
    "watchPatterns": [
      "*.html",
      "*.js",
      "*.json",
      "*.png",
      "*.md"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "healthcheckPath": "/",
    "numReplicas": 1
  }
}
